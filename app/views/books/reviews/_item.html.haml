%p
  %strong
    by
    = link_to review.created_by.email, user_reviews_path(review.created_by)
    = "(#{review.rating} of 5)"
  %br
  = review.content

  - if can_manage_review?(review)

    %br
    = link_to "Edit", edit_book_review_path(review.book, review)
    \|
    = link_to "Delete", book_review_path(review.book, review), method: :delete, confirm: "Are you sure?"

  %hr