.row
  .col-md-6
    = form_for [@book, @review] do |f|
      - if @review.errors.any?
        #error_explanation
          %h2= "#{pluralize(@review.errors.count, "error")} prohibited this books_review from being saved:"
          %ul
            - @review.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label :rating
        = f.select :rating, (0..5).to_a, {}, class: "form-control"
      .field
        = f.text_area :content, class: "form-control", rows: 10
      .actions
        = f.submit 'Submit Review', class: "btn btn-primary"
