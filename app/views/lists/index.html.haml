%h1 
	Listing lists for 
	= @user.email

- if @lists.length < 1
	%p You have no lists, create one!

%table.table.table-striped
	%tr
		%th Title
		%th
		%th

	- @lists.each do |list|
		%tr
			%td= link_to list.title, list
			%td= link_to 'Edit', edit_list_path(list)
			%td= link_to 'Destroy', list, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New List', new_list_path, class: "btn btn-primary"
